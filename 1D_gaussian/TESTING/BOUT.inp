timestep = 1.0e-1   # Output timestep
nout = 6000  	# Number of output steps

MYG = 0 # No need for Y communication

[mesh]

nx = 520
ny = 1
nz = 1  # Periodic, so no guard cells in Z

dy = 1.
dz = 1.

[hw]

# choose ONE path at a time:
sigma = 0.0        # 0 â†’ disable Gaussian path (use PDE/local)
lambda_chi = 1.0e-2  # enable PDE smoother with this influence length
helm_iters = 50
helm_tol   = 1e-10

chi_not = 1e-5
# Delta = 1/7    # Not used, but spacing between cells
g = 1.0e0
tau_ac = 1.0e1
gamma = 1.0e-2
Kc = 1.0e-1
beta = 1.0e-3

[T]
A = 0.1
function = A* x
bndry_xin = constgradient(A)
bndry_xout = constgradient(A)
evolve_bndry = true


[K]
w = 0.04
p = 6
function = (
    exp(-((x-1/7)/w)^p) +
    exp(-((x-2/7)/w)^p) +
    exp(-((x-3/7)/w)^p) + 
    exp(-((x-4/7)/w)^p) + 
    exp(-((x-5/7)/w)^p) + 
    exp(-((x-6/7)/w)^p)
) / 1.0
bndry_all = neumann
